# ======================================
# Operational Settings
# ======================================

# Safety: Keep DRY_RUN=true until you've tested thoroughly
DRY_RUN=true

# Review mode: Print tweet drafts without posting (overrides DRY_RUN)
REVIEW_MODE=false

# Only fetch and post items from the last N hours
LOOKBACK_HOURS=24

# Maximum number of tweets to post per run
MAX_POSTS_PER_RUN=5

# Maximum posts from a single domain per run (prevents monopolization)
MAX_POSTS_PER_DOMAIN=1

# Minimum relevance score required to post (0-10+ scale)
MIN_SCORE_THRESHOLD=5.0

# ======================================
# Database
# ======================================

# Path to SQLite database for deduplication tracking
DB_PATH=./data/autoposter.db

# ======================================
# Logging
# ======================================

# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ======================================
# Scoring Weights (Advanced)
# ======================================

# Weight for AI agent keyword matches
AGENT_KEYWORD_WEIGHT=1.0

# Weight for finance/insurance keyword matches
FINANCE_KEYWORD_WEIGHT=1.0

# Weight for recency (newer items get slight boost)
RECENCY_WEIGHT=0.5

# ======================================
# GDELT Configuration (Advanced)
# ======================================

# GDELT search mode: "ArtList" is default for GDELT DOC API
GDELT_MODE=ArtList

# Maximum articles to fetch from GDELT per run
GDELT_MAX_RECORDS=250
